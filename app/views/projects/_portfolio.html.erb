<!-- carousel -->
<a id="Projects"></a>
<h1 class="projects-header">Projects<h1>
<div class="caro">
  <div id="carousel-projects" class="carousel slide container" data-ride="carousel" style=" margin: 0 auto">
    <ol class="carousel-indicators" style="">
      <li data-target="#carousel-projects" data-slide-to="0" class="active"></li>
      <li data-target="#carousel-projects" data-slide-to="1"></li>
      <li data-target="#carousel projects" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
      <div class="item active">
        <div class="inner-item">
          <!--height:460px, width:800px-->
          <%= link_to image_tag("inspirez_800_460.jpg", :alt => "http://inspirez.herokuapp.com"), "http://inspirez.herokuapp.com", :target => "_blank" %>
        </div>
        <div class="carousel-caption">
          <p>- INSPIREZ -</p>
          <p>Get inspired. Take a break and read a random quote or watch a YouTube video.</p>
          <br>
        </div>
      </div>
      <div class="item">
        <div class="inner-item">
          <%= link_to image_tag("sl.jpg"), "http://startups-mankindforward.herokuapp.com/", :target => "http://startups-mankindforward.herokuapp.com/" %>
      </div>
        <div class="carousel-caption">
          <p>- Startup Landscapes -</p>
          <p>A website for quick navigation of the continuously changing world of startups that displays current startups organized by industry. Uses the Crunchbase API.</p>
          <br>
        </div>
      </div>
      <!--<div class="item">
        <div class="inner-item">
          <%= link_to image_tag("rsz_aboutme.jpg", :alt => "about.me/melzhang"), "about.me/melzhang", :target => "_blank" %>
        </div>
        <div class="carousel-caption">
          <p>About.me</p>
        </div>
      </div> -->
    </div>

    <!-- Controls -->
    <a class="left carousel-control" href="#carousel-projects" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left">&lsaquo;</span>
    </a>
    <a class="right carousel-control" href="#carousel-projects" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right">&rsaquo;</span>
    </a>
  </div>
</div>

<script>
  $(document).ready(function(){
    $('.carousel').carousel();
      interval: 3000
  });
</script>
<!-- end carousel -->